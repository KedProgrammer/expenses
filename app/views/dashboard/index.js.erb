var chart = new CanvasJS.Chart("chartContainer",
  {
    backgroundColor: "#33373a",
   animationEnabled: true,
    legend: {
       fontColor: "white"
     },
       axisY:{
        labelFontColor: "white"
      },
    data: [
      <% @categorys_by_day.each do |d| %>
        {
      type: "stackedColumn" ,
      legendText: "<%= d["type"] %>",
      showInLegend: "true",
      titleFontColor: "white",
      dataPoints: [
        <% d["days"].each do |e| %>
            {  y: <%= e["amount"] %> , label: "<%= e["day"] %>" },
        <% end %>
      ]
    },    
      <% end %>
    ]
  });
  chart.render();




