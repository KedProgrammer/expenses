
$(document).ready(function () {
  $('.filter-type1').on('click', 'a',  function(e){
    e.preventDefault();
    if ($(this).hasClass("active")){
    	$(this).toggleClass("active");
    }else{
    	$('.filter-type1 a').removeClass("active")
    	$(this).addClass("active")
    }
  });


  $('.filter-type2').on('click', 'a',  function(e){
    e.preventDefault();
    if ($(this).hasClass("active")){
    	$(this).toggleClass("active");
    }else{
    	$('.filter-type2 a').removeClass("active")
    	$(this).addClass("active")
    }
    $.ajax({
  url: "/expenses?hola=1",
  context: document.body
})
  });

});







